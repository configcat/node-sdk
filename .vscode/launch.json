{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Run tests",
      "cwd": "${workspaceRoot}",
      "runtimeArgs": [
        "--expose-gc"
      ],
      "program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
      "args": [
        "--require",
        "ts-node/register",
        "test/**/*.ts",
        "--fgrep",
        "",
        "--color",
        "--exit",
        "--timeout",
        "30000"
      ],
      "internalConsoleOptions": "openOnSessionStart",
      "sourceMaps": true,
      "outFiles": [
        "${workspaceFolder}/**/*.js",
        "!${workspaceFolder}/**/node_modules/**"
      ],
      "skipFiles": [
        "<node_internals>/**/*.js"
      ]
    }
  ]
}